#!/usr/bin/env python
import sys

try:
   import dotcloud_pkg
   from dotcloud_pkg.ui import CLI
except ImportError, e:
   import dotcloud
   from dotcloud.ui import CLI

if __name__ == '__main__':
   import os
   url = os.environ.get('DOTCLOUD_API_ENDPOINT', 'https://api-experimental.dotcloud.com/v1')
   debug = os.environ.get('DOTCLOUD_DEBUG', False)
   cli = CLI(endpoint=url, debug=debug)
   cli.run(sys.argv[1:])
